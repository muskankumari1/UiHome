<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- ðŸ”¹ Static Top Panel -->
    <LinearLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_top_bar_gradient"
        android:elevation="10dp">

        <!-- App Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="RealEstate"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/premiumProfile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_white"
            android:padding="2dp"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>


    <!-- ðŸ”¹ Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Field -->
            <EditText
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="Search location, city or ZIP"
                android:padding="12dp"
                android:background="@drawable/bg_search_rounded"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- ðŸ”¹ Horizontal Scrollable Filters -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnsort"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Sort"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_filter_button"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Price Range"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_filter_button"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnType"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Property Type"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_filter_button"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Open Houses"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_filter_button"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Featured Property Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Property Image -->
                    <ImageView
                        android:id="@+id/img_property"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/frontvilla" />

                    <!-- Gradient overlay -->
                    <View
                        android:id="@+id/overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_overlay" />

                    <!-- Property Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_featured"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Featured: Oceanfront Villa"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malibu, California â€¢ 5 Bed â€¢ 6 Bath â€¢ 7,500 sqft"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp" />

                        <Button
                            android:id="@+id/btn_explore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore Property"
                            android:backgroundTint="@android:color/holo_orange_dark"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Featured Properties Section -->
            <TextView
                android:id="@+id/tvFeatured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Properties"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFeatured"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:scrollbars="none" />

            <!-- Browse by Category -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse by Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        style="@style/CategoryChip"
                        android:text="Apartments" />

                    <TextView
                        style="@style/CategoryChip"
                        android:text="Villas" />

                    <TextView
                        style="@style/CategoryChip"
                        android:text="Plots" />

                    <TextView
                        style="@style/CategoryChip"
                        android:text="Commercial" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Recommended Section -->
            <TextView
                android:id="@+id/tvRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended for You"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <!-- ðŸ”¹ Fixed Bottom Navigation -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="32dp"
        android:src="@drawable/outline_add_24"
        android:contentDescription="Add"
        app:backgroundTint="@color/white"
        app:tint="@color/levender" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@color/selector_icon_color"
        app:itemTextColor="@color/selector_icon_color" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>

